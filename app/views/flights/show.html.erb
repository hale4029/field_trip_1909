<h1>Flight Information</h1>
<section>
  Airline: <%= @flight.airline.name %>
  Number: <%= @flight.number %>
  Date: <%= @flight.date %>
  Time: <%= @flight.time %>
  Departure City: <%= @flight.departure_city %>
  Arrival City: <%= @flight.arrival_city %>
</section>

<h3>Age Profile</h3>
<section>
  Adults: <%= @flight.number_of_adults %>
  Minors: <%= @flight.number_of_minors %>
</section>

<% @flight.passengers.each do |passenger| %>
    <li>Name: <%= passenger.name %></li>
<% end %>
